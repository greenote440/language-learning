# Database Configuration
# PostgreSQL connection string (for future stories)
DATABASE_URL=postgresql://user:password@localhost:5432/adaptive_italian_audio

# Redis Configuration (for future stories)
REDIS_URL=redis://localhost:6379

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud TTS Configuration
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_TTS_CREDENTIALS_PATH=path/to/service-account-key.json

