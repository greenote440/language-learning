{
  "name": "@adaptive-italian-audio/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "migrate": "tsx src/scripts/migrate.ts",
    "test:db": "tsx src/scripts/test-db.ts",
    "test:external": "tsx src/scripts/test-external-services.ts",
    "test": "vitest run"
  },
  "dependencies": {
    "@adaptive-italian-audio/model-service": "workspace:*",
    "@aws-sdk/client-s3": "^3.490.0",
    "@google-cloud/text-to-speech": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.16.3",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.16.5",
    "@types/pg": "^8.16.0",
    "supertest": "^6.3.4",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  }
}
